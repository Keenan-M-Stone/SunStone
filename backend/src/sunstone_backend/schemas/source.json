{
  "$id": "https://example.com/schemas/source.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Source",
  "description": "Source definition schema for run specs",
  "type": "object",
  "properties": {
    "type": {"type": "string", "enum": ["gaussian_pulse", "toneburst", "chirp", "plane_wave", "dipole", "lumped" ], "description": "Source type"},
    "frequency": {"type": "number"},
    "bandwidth": {"type": "number"},
    "polarity": {"type": "string", "enum": ["x","y","z"], "description": "Polarization direction"},
    "params": {"type": "object", "additionalProperties": true}
  },
  "required": ["type"],
  "additionalProperties": false
}
